<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <title>BOP Help - Report General</title>
    @Styles.Render("~/Content/css")
    <script src="@Url.Content("~/Scripts/modernizr.min.js")"></script>

    @RenderSection("contents", false)
</head>
<body class="fixed-left">
    <div id="wrapper">
        <div class="topbar">
            <div class="topbar-left" >
                <a href="@Url.Action("Index","Home")"  class="logo">
                    <img src="~/images/bophelp.png" class="img-responsive" id="ls" />
                </a>
            </div>
            <div class="navbar navbar" role="navigation">
                <div class="container">
                    <div class="">
                        <div class="pull-left">
                            <button class="button-menu-mobile open-left waves-effect">
                                <i class="md md-menu"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">
                <div id="sidebar-menu">
                    <ul>
                        <li>
                            <a href="@Url.Action("Index", "Home")" class="waves-effect waves-primary">
                                <i class="ti-home"></i><span style="margin-top:1pc;"> Dashboard </span>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="content-page">
            <div class="content">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script>
        var resizefunc = [];
    </script>

    <!-- Plugins  -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundle/common")

    @RenderSection("scripts", false)
</body>
</html>